<odoo>
    <!-- cron job for reservation reminder #T00471-->
    <record id="reservation_reminder" model="ir.cron">
        <field name="name">Reservation reminder</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">True</field>
        <field name="model_id" ref="model_hotel_room_reservation" />
        <field
            name="nextcall"
            eval="(datetime.now() + timedelta(days=0)).strftime('%Y-%m-%d 23:59:59')"
        />
        <field name="code">model.action_reservation_reminder()</field>
        <field name="state">code</field>
    </record>
</odoo>
