<odoo>
    <!-- Hotel room type tree view #T00471 -->
    <record id="hotel_room_type_tree_views" model="ir.ui.view">
        <field name="name">hotel.room.reservation.tree</field>
        <field name="model">hotel.room.reservation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reservation_seq" />
                <field name="reservation_status" />
            </tree>
        </field>
    </record>
    <!-- Hotel room type form view #T00471 -->
    <record id="hotel_room_type_form_views" model="ir.ui.view">
        <field name="name">hotel.room.reservation.form</field>
        <field name="model">hotel.room.reservation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Status bar  #T00471-->
                    <field name="reservation_status" widget="statusbar" />
                    <!-- confirm button #T00471 -->
                    <button
                        name="action_confirm"
                        id="action_confirm"
                        class="oe_highlight"
                        type="object"
                        string="Confirm"
                        attrs="{'invisible': [('reservation_status', 'not in', ['draft'])]}"
                    />
                    <!-- cancel button #T00471 -->
                    <button
                        name="action_cancel"
                        id="action_cancel"
                        class="oe_highlight"
                        type="object"
                        string="Cancel"
                        attrs="{'invisible': [('reservation_status', 'in', ['cancelled'])]}"
                    />
                    <!-- cancel to draft button #T00471 -->
                    <button
                        name="action_cancel_to_draft"
                        id="action_cancel_to_draft"
                        class="oe_highlight"
                        type="object"
                        string="Set to draft"
                        attrs="{'invisible': [('reservation_status', 'not in', ['cancelled'])]}"
                    />
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="reservation_seq" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rooms_ids" widget="many2many_tags" />
                            <field name="check_in_date" />
                            <field name="check_out_date" />
                            <field name="total_days" />
                        </group>
                        <group>
                            <field
                                name="total_cost"
                                widget="monetary"
                                readonly="1"
                                force_save="1"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Guests" name="guests">
                            <field name="customer_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="phone" />
                                    <field name="email" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- hotel reservation search view #T00471 -->
    <record id="hotel_room_type_search_views" model="ir.ui.view">
        <field name="name">hotel.room.reservation.search</field>
        <field name="model">hotel.room.reservation</field>
        <field name="arch" type="xml">
            <search>
                <field name="check_in_date" />
                <field name="check_out_date" />
                <!-- filter by status #T00471-->
                <filter
                    string="Draft"
                    name="reservation_status"
                    domain="[('reservation_status', '=','draft')]"
                />
                <filter
                    string="Reserved"
                    name="reservation_status"
                    domain="[('reservation_status', '=','reserved')]"
                />
                <filter
                    string="Cancelled"
                    name="reservation_status"
                    domain="[('reservation_status', '=','cancelled')]"
                />
            </search>
        </field>
    </record>
    <!-- window action #T00471 -->
    <record id="action_hotel_room_reservation" model="ir.actions.act_window">
        <field name="name">Room Reservation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.room.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create Reservations</p>
        </field>
    </record>
</odoo>
