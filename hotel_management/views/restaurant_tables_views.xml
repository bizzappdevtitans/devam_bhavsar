<odoo>
    <!-- hotel room tree view #T00471 -->
    <record id="restaurant_tables_tree_view" model="ir.ui.view">
        <field name="name">restaurant.tables.tree</field>
        <field name="model">restaurant.tables</field>
        <field name="arch" type="xml">
            <tree>
                <field name="table_no_seq" />
                <field name="availability_status" />
            </tree>
        </field>
    </record>
    <!-- hotel room form view #T00471 -->
    <record id="restaurant_tables_form_view" model="ir.ui.view">
        <field name="name">restaurant.tables.form</field>
        <field name="model">restaurant.tables</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="availability_status" widget="statusbar" />
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="table_no_seq" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <field name="capacity" />
                        <field
                            name="restaurant_reservation_ref"
                            attrs="{'invisible': [('availability_status', '=', 'available')]}"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="restaurant_tables_search_view" model="ir.ui.view">
        <field name="name">restaurant.tables.search</field>
        <field name="model">restaurant.tables</field>
        <field name="arch" type="xml">
            <search>
                <field name="table_no_seq" />
                <field name="availability_status" />
                <field name="restaurant_reservation_ref" />
                <!-- filter by status #T00471-->
                <filter
                    string="Available"
                    name="availability_status"
                    domain="[('availability_status', '=','available')]"
                />
                <filter
                    string="Reserved"
                    name="availability_status"
                    domain="[('availability_status', '=','reserved')]"
                />
            </search>
        </field>
    </record>
    <!-- window action #T00471 -->
    <record id="action_restaurant_tables" model="ir.actions.act_window">
        <field name="name">Tables</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">restaurant.tables</field>
        <field name='view_mode'>tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Add Tables</p>
        </field>
    </record>
</odoo>
