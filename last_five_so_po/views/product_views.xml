<odoo>
    <!-- Inherted form view from product.product and added required fields #T00447 -->
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page[@name='invoicing']" position="after">
                <page string="Product Details" name="product_details">
                    <group
                        string="Last 5 Purchase Orders"
                        attrs="{'invisible': [('last_5_po_ids', '=', [])]}"
                    >
                        <field name="last_5_po_ids">
                            <tree>
                                <field name="name" />
                                <field name="date_approve" />
                            </tree>
                        </field>
                    </group>
                    <group
                        string="Last 5 Sales Orders"
                        attrs="{'invisible': [('last_5_so_ids', '=', [])]}"
                    >
                        <field name="last_5_so_ids" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
