<odoo>
    <!-- Email template for confirmed restraunt reservations #T00471 -->
    <record
        id="restraunt_guests_reservation_confirmed_email_template"
        model="mail.template"
    >
        <field name="name">Restraunt guest Reservation confirmed email template</field>
        <field name="model_id" ref="Hotel_management.model_restaurant_reservation" />
        <field name="email_from">Taj@gmail.com</field>
        <field name="email_to">{{object.guest_name_ids[0].email}}</field>
        <field name="subject"> Table Reservation Confirmed</field>
        <field name="body_html" type="html">
            <p>
                <t>
                    <t t-foreach="object.table_booking_list_ids" t-as="tables">
                    Dear <t t-out="object.guest_name_ids[0].name" />,
                    <br /><br />
                    Your reservation for <t t-out="tables.table_no_seq" /> on <t
                            t-out="object.reservation_date"
                        /> is confirmed.
                    <br /><br />
                    Regards,
                    <br />
                    The Taj
                    </t>
                </t>
            </p>
        </field>
    </record>
</odoo>
