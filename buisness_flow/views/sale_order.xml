<odoo>
    <!-- Inherted form view from sale order and added required fields #T00372 -->
    <record id="sale_order_form_view" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="invoice_description" />
                <field name="delivery_description" />
                <field name="delivery_order_description" />
                <field name="purchase_order_description" />
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="project_requirements" />
                <field name="task_requirements" />
                <field name="manufacturing_order_description" />
            </xpath>
        </field>
    </record>
</odoo>
