<odoo>
    <data>
        <!-- cron job to wish birthday #T00398-->
        <record id="ir_cron_find_and_wish_birthday" model="ir.cron">
            <field name="name">Find and wish birthdays of teachers</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">True</field>
            <field name="model_id" ref="model_school_teacher" />
            <field
                name="nextcall"
                eval="(datetime.now() + timedelta(days=0)).strftime('%Y-%m-%d 23:59:59')"
            />
            <field name="code">model.action_find_and_wish_birthday()</field>
            <field name="state">code</field>
        </record>
    </data>
</odoo>
