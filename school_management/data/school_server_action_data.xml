<odoo>
    <data>
        <!-- server action to turn is_status_active field False #T00404-->
        <record id="action_to_archive_students_records" model="ir.actions.server">
            <field name="name">Archive student records</field>
            <field name="model_id" ref="school_management.model_school_student" />
            <field name="state">code</field>
            <field
                name="code"
            >action = records.action_archive_students_records()</field>
        </record>
        <!-- server action to turn is_status_active field True #T00404-->
        <record id="action_to_unarchive_students_records" model="ir.actions.server">
            <field name="name">Unarchive student records</field>
            <field name="model_id" ref="school_management.model_school_student" />
            <field name="state">code</field>
            <field
                name="code"
            >action = records.action_unarchive_students_records()</field>
        </record>
    </data>
</odoo>
