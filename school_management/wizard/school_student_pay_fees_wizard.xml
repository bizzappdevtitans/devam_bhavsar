<odoo>
    <!-- form view #T00348 -->
    <record id="school_student_pay_fees_wizard_form_view" model="ir.ui.view">
        <field name="name">school.payfees.form</field>
        <field name="model">student.payfees.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="currency_id" invisible='1' />
                    <field name="name_student" readonly="1" />
                    <field name="paid_date" readonly="1" />
                    <field
                        name="paid_fees"
                        widget="monetary"
                        string="Enter amount"
                        required="1"
                    />
                    <field
                        name="total_fees"
                        sum="total_fees"
                        widget="monetary"
                        readonly="1"
                        force_save="1"
                    />
                    <field name="remaning_fees" widget="monetary" />
                </group>
                <footer>
                <!-- save and discard  #T00348  -->
                    <button
                        name="action_pay_fees"
                        string="Pay fees"
                        type="object"
                        class="btn-primary"
                    />
                    <button special="cancel" string="Discard" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
    <!--  window actions #T00348 -->
    <record id="action_school_student_pay_fees_wizard" model="ir.actions.act_window">
        <field name="name">Pay fees</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.payfees.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
