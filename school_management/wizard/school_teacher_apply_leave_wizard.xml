<odoo>
    <!-- form view #T00348-->
    <record id="school_teacher_leave_wizard_form_view" model="ir.ui.view">
        <field name="name">school.teacher.leave.form</field>
        <field name="model">school.teacher.leave.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="teacher_name_id" readonly="1" />
                    <field name="leave_type" widget="radio" />
                    <field name="leave_date_from" />
                    <field name="leave_date_to" />
                    <field name="total_days" />
                    <field name="leave_reason" />
                </group>
                <footer>
                <!-- save and discard  #T00348  -->
                    <button
                        name="action_apply_leave"
                        string="Leave"
                        type="object"
                        class="btn-primary"
                    />
                    <button special="cancel" string="Discard" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
    <!--  window actions #T00348 -->
    <record id="action_school_teacher_leave_wizard" model="ir.actions.act_window">
        <field name="name">Apply Leave</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.teacher.leave.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
