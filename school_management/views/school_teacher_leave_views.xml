<odoo>
    <!-- tree view #T00348-->
    <record id="school_teacher_leave_tree_view" model="ir.ui.view">
        <field name="name">school.teacher.leave.tree</field>
        <field name="model">school.teacher.leave</field>
        <field name="arch" type="xml">
            <tree>
                <field name="teacher_name_id" string="Name" />
                <field name="leave_date_from" />
                <field name="leave_date_to" />
                <field name="total_days" />
                <field name="leave_types" string="Leave Type" />
            </tree>
        </field>
    </record>
    <!-- form view #T00348-->
    <record id="school_teacher_leave_form_view" model="ir.ui.view">
        <field name="name">school.teacher.leave.form</field>
        <field name="model">school.teacher.leave</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="teacher_name_id" string="Name" />
                        <field name="leave_types" string="Leave Type" widget="radio" />
                    </group>
                    <group>
                        <field name="leave_date_from" />
                        <field name="leave_date_to" />
                        <field name="total_days" />
                        <field name="leave_reason" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- window action #T00348-->
    <record id="action_school_teacher_leave" model="ir.actions.act_window">
        <field name="name">Teacher leave details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.teacher.leave</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create teacher leave Record</p>
        </field>
    </record>
</odoo>
