<odoo>
    <!-- Tree view #T00335-->
    <record id="school_student_classes_tree_view" model="ir.ui.view">
        <field name="name">school.classes.tree</field>
        <field name="model">school.student.classes</field>
        <field name="arch" type="xml">
            <tree>
                <field name="class_standard" />
                <field name="division" />
                <field name="class_teacher_id" />
                <field name="strength_of_class" />
            </tree>
        </field>
    </record>
    <!-- form view #T00335-->
    <record id="school_student_classes_form_view" model="ir.ui.view">
        <field name="name">school.classes.form</field>
        <field name="model">school.student.classes</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- smart button for student count #T00335-->
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            type="object"
                            name="action_show_number_of_students"
                            icon="fa-users"
                        >
                            <field
                                string="Students"
                                name="student_count"
                                widget="statinfo"
                            />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="class_standard" />
                            <field name="strength_of_class" />
                        </group>
                        <group>
                            <field name="division" />
                            <field name="class_teacher_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Students information" name="assigned_students">
                            <field name="class_students_ids" />
                        </page>
                    </notebook>
                </sheet>
                <!-- chatter  #T00335-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <!-- search view #T00335-->
    <record id="school_student_classes_search_view" model="ir.ui.view">
        <field name="name">school.classes.search</field>
        <field name="model">school.student.classes</field>
        <field name="arch" type="xml">
            <search>
                <field name="class_standard" />
                <field name="division" />
                <field name="strength_of_class" />
                <!-- group by division #T00335-->
                <group expand="0" string="Group By">
                    <filter
                        string="Division"
                        name="division"
                        context="{'group_by': 'division'}"
                    />
                </group>
                <!-- group by standard #T00335-->
                <group expand="0" string="Group By">
                    <filter
                        string="Standard"
                        name="class_standard"
                        context="{'group_by': 'class_standard'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <!--  window actions #T00335-->
    <record id="action_school_classes" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student.classes</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create class Record</p>
        </field>
    </record>
</odoo>
