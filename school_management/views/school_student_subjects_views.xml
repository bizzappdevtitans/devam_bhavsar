<odoo>
    <!-- tree view #T00335-->
    <record id="school_student_subjects_tree_view" model="ir.ui.view">
        <field name="name">school.subjects.tree</field>
        <field name="model">school.student.subjects</field>
        <field name="arch" type="xml">
            <tree>
                <field name="subjects_name" />
            </tree>
        </field>
    </record>
    <!-- form view #T00335-->
    <record id="school_student_subjects_form_view" model="ir.ui.view">
        <field name="name">school.subjects.form</field>
        <field name="model">school.student.subjects</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="subjects_name" />
                        <field name="is_mandatory_subject" />
                    </group>
                    <notebook>
                        <page
                            string=" Subject Teacher information"
                            name="assigned_students"
                        >
                            <field name="subject_teacher_ids" />
                        </page>
                        <page
                            string="Students Information"
                            name="student_who_take_this_subject"
                        >
                            <field
                                name="selected_subject_ids"
                                string="Students who selected this subject"
                            />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- search view #T00335-->
    <record id="school_student_subjects_search_view" model="ir.ui.view">
        <field name="name">school.subjects.search</field>
        <field name="model">school.student.subjects</field>
        <field name="arch" type="xml">
            <search>
                <field name="subjects_name" />
            </search>
        </field>
    </record>
    <!-- action window #T00335-->
    <record id="action_school_subjects" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student.subjects</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create subject Record</p>
        </field>
    </record>
</odoo>
