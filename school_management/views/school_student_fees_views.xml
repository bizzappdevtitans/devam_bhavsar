<odoo>
    <!-- tree view #T00335-->
    <record id="school_student_fees_tree_view" model="ir.ui.view">
        <field name="name">school.fees.tree</field>
        <field name="model">school.student.fees</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_student_id" />
                <field name="paid_date" readonly="1" />
                <field name="currency_id" invisible='1' />
                <field name="total_fees" widget="monetary" readonly="1" />
            </tree>
        </field>
    </record>
    <!-- form view #T00335-->
    <record id="school_student_fees_form_view" model="ir.ui.view">
        <field name="name">school.fees.form</field>
        <field name="model">school.student.fees</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="currency_id" invisible='1' />
                        <field name="name_student_id" />
                        <field name="paid_date" readonly="1" />
                        <field
                            name="paid_fees"
                            widget="monetary"
                            string="Enter amount"
                            required="1"
                        />
                        <field
                            name="total_fees"
                            sum="total_fees"
                            widget="monetary"
                            readonly="1"
                            force_save="1"
                        />
                        <field name="remaning_fees" widget="monetary" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--  window actions #T00335-->
    <record id="action_school_fees" model="ir.actions.act_window">
        <field name="name">fees</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student.fees</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create fees Record</p>
        </field>
    </record>
</odoo>
